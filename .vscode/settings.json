{
  // Caminho do interpretador Python
  "python.defaultInterpreterPath": "venv/bin/python",

  // Formatação de código
  "editor.formatOnSave": true,

  // Testes com pytest
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["tests"],

  // Organizar imports automaticamente ao salvar
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },

  // Exclusões de arquivos e diretórios na árvore de arquivos
  "files.exclude": {
    "**/.venv": true,
    "**/.mypy_cache/": true,
    "**/.pytest_cache/": true,
    "**/*.pyc": true,
    "**/.git": true,
    "**/__pycache__/": true,
    "**/__init__.py": true
  },

  // Ajustes de editor e interface
  "editor.tabSize": 4,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "workbench.colorTheme": "Default Dark+",
  "explorer.confirmDelete": false,

  // Terminal padrão para Linux
  "terminal.integrated.defaultProfile.linux": "bash",

  // Análise de tipos estática rigorosa
  "python.analysis.typeCheckingMode": "strict",

  // Variáveis de ambiente
  "python.envFile": "${workspaceFolder}/.env",

  // Console de depuração
  "debug.console.fontSize": 14,

  // Dicionário personalizado para o corretor ortográfico
  "cSpell.words": [
    "alido",
    "AORUS",
    "botao",
    "Botao",
    "boxlayout",
    "celerybeat",
    "certifi",
    "composicao",
    "diretorio",
    "dmypy",
    "docutils",
    "existencia",
    "fasico",
    "halign",
    "icone",
    "Icone",
    "idna",
    "inacessivel",
    "inicializacao",
    "iniconfig",
    "invalidos",
    "kivy",
    "kivymd",
    "levelname",
    "linux",
    "mkdocs",
    "mypy",
    "naoexiste",
    "permissao",
    "pluggy",
    "Pygments",
    "pypirc",
    "pytype",
    "rootdir",
    "ropeproject",
    "saida",
    "spyderproject",
    "spyproject",
    "urllib",
    "Usuario",
    "validacao",
    "Validacao",
    "venv",
    "verificacao"
  ]
}
