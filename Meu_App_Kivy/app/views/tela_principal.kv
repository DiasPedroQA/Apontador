<TelaPrincipal>:
    name: "tela_principal"
    MDFloatLayout:
        MDLabel:
            text: "Bem-vindo ao Meu App Kivy"
            halign: "center"
            pos_hint: {"center_y": 0.8}
            font_style: "H5"

        MDTextField:
            id: nome_input
            hint_text: "Seu nome"
            mode: "rectangle"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            line_color_normal: 1, 1, 1, 0.6
            text_color: 0.56, 0.93, 0.56, 1
            color_mode: "custom"
            fill_color: 0.2, 0.2, 0.2, 1

        MDRaisedButton:
            text: "Confirmar"
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_release: root.confirmar_nome()
