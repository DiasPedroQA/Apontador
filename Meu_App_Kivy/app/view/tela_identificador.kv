<BotaoIcone@MDBoxLayout>:
    orientation: "horizontal"
    spacing: "10dp"
    size_hint_y: None
    height: "48dp"
    MDRaisedButton:
        text: root.texto
        icon: root.icone
        size_hint_x: None
        width: "220dp"
        on_release: root.ação()

<TelaIdentificador>:
    name: "identificador_sistemas_operacionais"

    MDBoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "20dp"
        md_bg_color: app.theme_cls.bg_normal

        MDTopAppBar:
            title: "Identificador de Sistemas Operacionais"
            md_bg_color: app.theme_cls.primary_color
            specific_text_color: 1, 1, 1, 1
            left_action_items: [["folder", lambda x: None]]
            right_action_items: [["information", lambda x: app.mostrar_sobre()]]

        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: "15dp"
            padding: "15dp"
            pos_hint: {"center_x": 0.5}
            size_hint_x: 0.95

            MDCard:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "20dp"
                spacing: "15dp"
                radius: [15, 15, 15, 15]
                md_bg_color: app.theme_cls.bg_dark

                MDTextField:
                    id: entrada_caminho
                    hint_text: "Informe o caminho do arquivo ou pasta"
                    size_hint_x: 1
                    size_hint_y: None
                    height: "56dp"
                    text_color_focus: 1, 1, 0, 1
                    line_color_focus: 0.4, 0.6, 1, 1
                    mode: "rectangle"
                    icon_left: "file"

                MDRaisedButton:
                    text: "Identificar Caminho"
                    icon: "check-bold"
                    size_hint_x: None
                    width: "220dp"
                    size_hint_y: None
                    height: "48dp"
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: app.theme_cls.primary_light
                    text_color: 1, 1, 1, 1
                    on_release: root.identificar_caminho()

        MDLabel:
            id: resultado_label
            text: "Digite um caminho e clique em 'Identificar Caminho'."
            halign: "left"
            markup: True
            size_hint_x: 1
            size_hint_y: None
            height: self.texture_size[1] + dp(20)
            theme_text_color: "Primary"

        # Barra inferior com botões visuais separados
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "60dp"
            spacing: "15dp"
            padding: "10dp"
            pos_hint: {"center_x": 0.5}
            size_hint_x: 1

            MDRaisedButton:
                text: "Tema Claro/Escuro"
                icon: "theme-light-dark"
                on_release: app.trocar_tema()
